<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Create Space Wizard Form View -->
        <record id="view_gchat_space_create_wizard_form" model="ir.ui.view">
            <field name="name">gchat.space.create.wizard.form</field>
            <field name="model">gchat.space.create.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Google Chat Space">
                    <group>
                        <field name="project_id" readonly="1"/>
                        <field name="space_name"/>
                        <field name="space_description"/>
                    </group>
                    <footer>
                        <button name="action_create_space" 
                                string="Create Space" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Link Space Wizard Form View -->
        <record id="view_gchat_space_link_wizard_form" model="ir.ui.view">
            <field name="name">gchat.space.link.wizard.form</field>
            <field name="model">gchat.space.link.wizard</field>
            <field name="arch" type="xml">
                <form string="Link Google Chat Space">
                    <group>
                        <field name="project_id" readonly="1"/>
                        <field name="space_id" domain="[('project_id', '=', project_id)]"/>
                        <field name="space_name"/>
                        <field name="space_id_input" 
                               attrs="{'invisible': [('space_id', '!=', False)]}"/>
                    </group>
                    
                    <group string="Available Spaces">
                        <field name="available_spaces" widget="text"/>
                        <button name="action_refresh_spaces" 
                                string="Refresh Spaces" 
                                type="object" 
                                class="btn-secondary"/>
                    </group>
                    
                    <footer>
                        <button name="action_link_space" 
                                string="Link Space" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Message Wizard Form View -->
        <record id="view_gchat_message_wizard_form" model="ir.ui.view">
            <field name="name">gchat.message.wizard.form</field>
            <field name="model">gchat.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Google Chat Message">
                    <group>
                        <field name="task_id" readonly="1"/>
                        <field name="thread_id" readonly="1"/>
                        <field name="message_text" placeholder="Enter your message here..."/>
                    </group>
                    <footer>
                        <button name="action_send_message" 
                                string="Send Message" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
    </data>
</odoo> 