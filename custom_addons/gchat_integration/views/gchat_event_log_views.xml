<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Google Chat Event Log Tree View -->
        <record id="view_gchat_event_log_tree" model="ir.ui.view">
            <field name="name">gchat.event.log.tree</field>
            <field name="model">gchat.event.log</field>
            <field name="arch" type="xml">
                <tree string="Google Chat Event Log">
                    <field name="external_event_id"/>
                    <field name="source"/>
                    <field name="event_type"/>
                    <field name="space_id"/>
                    <field name="thread_key"/>
                    <field name="user_email"/>
                    <field name="status"/>
                    <field name="create_date"/>
                    <field name="processed_at"/>
                </tree>
            </field>
        </record>
        
        <!-- Google Chat Event Log Form View -->
        <record id="view_gchat_event_log_form" model="ir.ui.view">
            <field name="name">gchat.event.log.form</field>
            <field name="model">gchat.event.log</field>
            <field name="arch" type="xml">
                <form string="Google Chat Event Log">
                    <header>
                        <button name="action_retry_processing" 
                                string="Retry Processing" 
                                type="object" 
                                class="btn-warning"
                                attrs="{'invisible': [('status', '!=', 'error')]}"/>
                        <field name="status" widget="badge" 
                               decoration-success="status == 'done'"
                               decoration-warning="status == 'processing'"
                               decoration-danger="status == 'error'"
                               decoration-info="status == 'new'"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="external_event_id"/>
                                <field name="source"/>
                                <field name="event_type"/>
                                <field name="user_email"/>
                            </group>
                            <group>
                                <field name="space_id"/>
                                <field name="thread_key"/>
                                <field name="create_date" readonly="1"/>
                                <field name="processed_at" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Event Data" name="data">
                                <group>
                                    <field name="message_text" readonly="1"/>
                                </group>
                                <field name="payload_json" readonly="1" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                            
                            <page string="Error Information" name="error" attrs="{'invisible': [('status', '!=', 'error')]}">
                                <group>
                                    <field name="error" readonly="1" widget="text"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Google Chat Event Log Search View -->
        <record id="view_gchat_event_log_search" model="ir.ui.view">
            <field name="name">gchat.event.log.search</field>
            <field name="model">gchat.event.log</field>
            <field name="arch" type="xml">
                <search string="Search Google Chat Events">
                    <field name="external_event_id"/>
                    <field name="event_type"/>
                    <field name="user_email"/>
                    <field name="space_id"/>
                    <field name="thread_key"/>
                    <filter string="New" name="new" domain="[('status', '=', 'new')]"/>
                    <filter string="Processing" name="processing" domain="[('status', '=', 'processing')]"/>
                    <filter string="Done" name="done" domain="[('status', '=', 'done')]"/>
                    <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                    <filter string="Skipped" name="skipped" domain="[('status', '=', 'skipped')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                        <filter string="Event Type" name="event_type" context="{'group_by': 'event_type'}"/>
                        <filter string="Source" name="source" context="{'group_by': 'source'}"/>
                        <filter string="Space" name="space" context="{'group_by': 'space_id'}"/>
                        <filter string="Date" name="date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Google Chat Event Log Action -->
        <record id="action_gchat_event_log" model="ir.actions.act_window">
            <field name="name">Events Log</field>
            <field name="res_model">gchat.event.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_done': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Google Chat events found
                </p>
                <p>
                    Event logs track incoming Google Chat events and their processing status.
                </p>
            </field>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_gchat_event_log_list"
                  name="Events Log"
                  parent="menu_gchat_events"
                  action="action_gchat_event_log"
                  sequence="10"/>
        
    </data>
</odoo> 