<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Google Chat Configuration Tree View -->
        <record id="view_gchat_config_tree" model="ir.ui.view">
            <field name="name">gchat.config.tree</field>
            <field name="model">gchat.config</field>
            <field name="arch" type="xml">
                <tree string="Google Chat Configurations">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="auth_mode"/>
                    <field name="is_active"/>
                    <field name="sync_status"/>
                    <field name="last_sync"/>
                </tree>
            </field>
        </record>
        
        <!-- Google Chat Configuration Form View -->
        <record id="view_gchat_config_form" model="ir.ui.view">
            <field name="name">gchat.config.form</field>
            <field name="model">gchat.config</field>
            <field name="arch" type="xml">
                <form string="Google Chat Configuration">
                    <header>
                        <button name="action_test_connection" 
                                string="Test Connection" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('id', '=', False)]}"/>
                        <button name="action_get_oauth_token" 
                                string="Get OAuth Token" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('auth_mode', '!=', 'oauth')]}"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="auth_mode"/>
                                <field name="webhook_token" password="True"/>
                            </group>
                            <group>
                                <field name="sync_status"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="error_message" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Authentication" name="auth">
                                <group>
                                    <group string="Service Account" attrs="{'invisible': [('auth_mode', '!=', 'service_account')]}">
                                        <field name="sa_json" filename="sa_json_filename"/>
                                        <field name="sa_json_filename" invisible="1"/>
                                    </group>
                                    <group string="OAuth 2.0" attrs="{'invisible': [('auth_mode', '!=', 'oauth')]}">
                                        <field name="oauth_client_id"/>
                                        <field name="oauth_client_secret" password="True"/>
                                        <field name="refresh_token" password="True"/>
                                        <field name="access_token" password="True" readonly="1"/>
                                        <field name="token_expiry" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="API Configuration" name="api">
                                <group>
                                    <field name="scopes" widget="text"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Google Chat Configuration Search View -->
        <record id="view_gchat_config_search" model="ir.ui.view">
            <field name="name">gchat.config.search</field>
            <field name="model">gchat.config</field>
            <field name="arch" type="xml">
                <search string="Search Google Chat Configurations">
                    <field name="name"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}"/>
                        <filter string="Auth Mode" name="auth_mode" context="{'group_by': 'auth_mode'}"/>
                        <filter string="Status" name="status" context="{'group_by': 'sync_status'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Google Chat Configuration Action -->
        <record id="action_gchat_config" model="ir.actions.act_window">
            <field name="name">Connections</field>
            <field name="res_model">gchat.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Google Chat configuration
                </p>
                <p>
                    Configure Google Chat integration settings including authentication and API access.
                </p>
            </field>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_gchat_config_list"
                  name="Connections"
                  parent="menu_gchat_connections"
                  action="action_gchat_config"
                  sequence="10"/>
        
    </data>
</odoo> 