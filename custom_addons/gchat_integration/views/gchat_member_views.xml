<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Google Chat Member Tree View -->
        <record id="view_gchat_member_tree" model="ir.ui.view">
            <field name="name">gchat.member.tree</field>
            <field name="model">gchat.member</field>
            <field name="arch" type="xml">
                <tree string="Google Chat Members">
                    <field name="display_name"/>
                    <field name="space_id"/>
                    <field name="email"/>
                    <field name="role"/>
                    <field name="state"/>
                    <field name="partner_id"/>
                    <field name="last_sync"/>
                </tree>
            </field>
        </record>
        
        <!-- Google Chat Member Form View -->
        <record id="view_gchat_member_form" model="ir.ui.view">
            <field name="name">gchat.member.form</field>
            <field name="model">gchat.member</field>
            <field name="arch" type="xml">
                <form string="Google Chat Member">
                    <header>
                        <button name="action_invite" 
                                string="Invite" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('state', '=', 'active')]}"/>
                        <button name="action_remove" 
                                string="Remove" 
                                type="object" 
                                class="btn-danger"
                                attrs="{'invisible': [('state', '=', 'removed')]}"/>
                        <button name="action_resolve_partner" 
                                string="Resolve Partner" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('partner_id', '!=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="space_id"/>
                                <field name="email"/>
                                <field name="google_user_id"/>
                            </group>
                            <group>
                                <field name="role"/>
                                <field name="state"/>
                                <field name="partner_id"/>
                                <field name="last_sync" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Additional Info" name="additional">
                                <group>
                                    <field name="avatar_url"/>
                                    <field name="is_bot"/>
                                    <field name="sync_status"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Google Chat Member Action -->
        <record id="action_gchat_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">gchat.member</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Google Chat members found
                </p>
                <p>
                    Members are synced from Google Chat spaces and can be linked to Odoo partners.
                </p>
            </field>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_gchat_member_list"
                  name="Members"
                  parent="menu_gchat_members"
                  action="action_gchat_member"
                  sequence="10"/>
        
    </data>
</odoo> 