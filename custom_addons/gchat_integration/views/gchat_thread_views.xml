<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Google Chat Thread Tree View -->
        <record id="view_gchat_thread_tree" model="ir.ui.view">
            <field name="name">gchat.thread.tree</field>
            <field name="model">gchat.thread</field>
            <field name="arch" type="xml">
                <tree string="Google Chat Threads">
                    <field name="display_name"/>
                    <field name="task_id"/>
                    <field name="space_id"/>
                    <field name="thread_key"/>
                    <field name="message_count"/>
                    <field name="last_event_ts"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Google Chat Thread Form View -->
        <record id="view_gchat_thread_form" model="ir.ui.view">
            <field name="name">gchat.thread.form</field>
            <field name="model">gchat.thread</field>
            <field name="arch" type="xml">
                <form string="Google Chat Thread">
                    <header>
                        <button name="action_view_messages" 
                                string="View Messages" 
                                type="object" 
                                class="btn-info"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="task_id"/>
                                <field name="space_id"/>
                                <field name="thread_key"/>
                            </group>
                            <group>
                                <field name="thread_name"/>
                                <field name="thread_type"/>
                                <field name="message_count"/>
                                <field name="last_event_ts" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Google Chat Thread Action -->
        <record id="action_gchat_thread" model="ir.actions.act_window">
            <field name="name">Threads</field>
            <field name="res_model">gchat.thread</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Google Chat threads found
                </p>
                <p>
                    Threads are automatically created when tasks are synced with Google Chat.
                </p>
            </field>
        </record>
        
        <!-- Menu Item -->
        <menuitem id="menu_gchat_thread_list"
                  name="Threads"
                  parent="menu_gchat_threads"
                  action="action_gchat_thread"
                  sequence="10"/>
        
    </data>
</odoo> 